//------------------------------- zadanie 1 ----------------------------------------------

#include <std.h>

int main(){
	
	FILE *file =fopen("test.txt", "rb");
	if (fseek(file,0,SEEK_END)){
	 printf("ERROR");
	 return 1;
	}
	 else{
	 long dlugosc=ftell(file);
	 if(dlugosc<0){
	 printf("ERROR");
	 return 2;
	}
	else{
	 printf("dlugosc: %d bytes\n", dlugosc);
	 fclose(file);
	 return 0;	
	}
}

